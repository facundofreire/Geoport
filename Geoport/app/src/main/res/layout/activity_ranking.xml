<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorFondo"
    tools:context="com.salmun.dani.geoport.RankingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking"
        android:textSize="30sp"
        android:textColor="@color/colorTexto"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnDia"
        android:spinnerMode="dropdown"
        android:entries="@array/tiempoRanking"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/amigosRanking"
        android:id="@+id/btnDia"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTexto"
        android:layout_alignTop="@+id/btnTodo"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/todosRanking"
        android:id="@+id/btnTodo"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorTexto"
        android:layout_alignBottom="@+id/spinner"
        android:layout_toEndOf="@+id/textView2" />
</RelativeLayout>
